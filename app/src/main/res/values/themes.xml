<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SprintYou" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Key Colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/secondary_blue</item>
        <item name="colorOnPrimaryContainer">@color/strong_black</item>
        
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/strong_black</item>
        <item name="colorSecondaryContainer">@color/secondary_blue</item>
        <item name="colorOnSecondaryContainer">@color/strong_black</item>

        <item name="colorTertiary">@color/strong_black</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/minimal_background</item>
        <item name="colorOnBackground">@color/strong_black</item>
        <item name="colorSurface">@color/minimal_background</item>
        <item name="colorOnSurface">@color/strong_black</item>
        <item name="colorSurfaceVariant">@color/secondary_blue</item>
        <item name="colorOnSurfaceVariant">@color/strong_black</item>
        <item name="colorOutline">@color/primary_blue</item>

        <!-- Typography & Elements -->
        <item name="android:statusBarColor">@color/minimal_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/strong_black</item>
        
        <!-- Default Component Styles -->
        <item name="materialButtonStyle">@style/Widget.SprintYou.Button</item>
    </style>

    <style name="Theme.SprintYou" parent="Base.Theme.SprintYou" />

    <!-- Custom Button Style -->
    <style name="Widget.SprintYou.Button" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>